// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String   @id @default(cuid())
  customerName    String
  customerPhone   String
  customerEmail   String?
  items           String   // JSON string of cart items
  total           Float
  status          String   @default("pending") // pending, preparing, ready, completed
  createdAt       DateTime @default(now())
  estimatedReady  DateTime?
  completedAt     DateTime?
  
  @@map("orders")
}

model BusinessHours {
  id          String  @id @default(cuid())
  dayOfWeek   Int     // 0 = Sunday, 1 = Monday, etc.
  openTime    String? // "09:00" format or null if closed
  closeTime   String? // "21:00" format or null if closed
  isClosed    Boolean @default(false)
  isHoliday   Boolean @default(false)
  holidayName String?
  
  @@unique([dayOfWeek])
  @@map("business_hours")
}

model RestaurantStatus {
  id                String   @id @default("singleton")
  isOpen            Boolean  @default(true)
  isTemporarilyClosed Boolean @default(false)
  closureReason     String?
  lastUpdated       DateTime @default(now())
  
  @@map("restaurant_status")
}

model MenuItem {
  id          String  @id
  isAvailable Boolean @default(true)
  isOutOfStock Boolean @default(false)
  lastUpdated DateTime @default(now())
  
  @@map("menu_items")
}
